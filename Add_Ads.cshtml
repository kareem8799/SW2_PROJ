@model WebApplication5.ViewModel.AdsCategoryViewModel
@{
    ViewBag.Title = "Add_Ads";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add_Ads</h2>

@using (@Html.BeginForm("AddadsDB", "Ads", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>product</h4>
        <hr />
        <p>@Session["username"]</p>
        <div class="form-group">
            @Html.LabelFor(m => m.Ad.ADs_Tittle)
            @Html.TextBoxFor(m => m.Ad.ADs_Tittle, new { @class = "form-control" })
        </div>
        
        <div class="form-group">
            @Html.LabelFor(m => m.Ad.ADs_Discription)
            @Html.TextBoxFor(m => m.Ad.ADs_Discription, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Ad.Ads_Categories)
            @Html.DropDownListFor(m => m.Ad.Ads_Categories, new SelectList(Model.Category, "Categories_ID", "Categories_Name"), "select category", new { @class = "form-control" })
        </div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Ad.Ad_image, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="file" name="imgFile" required />
                @Html.ValidationMessageFor(model => model.Ad.Ad_image, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Submiit" class="btn btn-default" />
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
